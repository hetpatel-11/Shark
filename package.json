{
  "name": "shark",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Autonomous founder and operator runtime for Shark.",
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.json",
    "deploy:convex": "npx convex deploy -y --typecheck disable",
    "deploy:daytona": "tsx src/deploy/daytona.ts",
    "start": "node dist/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "node --test dist/runtime/*.test.js",
    "smoke": "node dist/main.js --smoke"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.63",
    "@chat-adapter/slack": "^4.15.0",
    "@chat-adapter/state-memory": "^4.15.0",
    "@daytonaio/sdk": "^0.148.0",
    "chat": "^4.15.0",
    "convex": "^1.32.0"
  }
}
